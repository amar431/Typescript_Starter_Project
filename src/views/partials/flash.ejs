<% if (messages.errors && messages.errors.length > 0) { %>
    <div class="alert alert-danger fade show">
        <button type="button" class="close" data-dismiss="alert"><i class="fa fa-times-circle-o"></i></button>
        <% messages.errors.forEach(error => { %>
            <div><%= error.msg %></div>
        <% }); %>
    </div>
<% } %>

<% if (messages.info && messages.info.length > 0) { %>
    <div class="alert alert-info fade show">
        <button type="button" class="close" data-dismiss="alert"><i class="fa fa-times-circle-o"></i></button>
        <% messages.info.forEach(info => { %>
            <div><%= info.msg %></div>
        <% }); %>
    </div>
<% } %>

<% if (messages.success && messages.success.length > 0) { %>
    <div class="alert alert-success fade show">
        <button type="button" class="close" data-dismiss="alert"><i class="fa fa-times-circle-o"></i></button>
        <% messages.success.forEach(success => { %>
            <div><%= success.msg %></div>
        <% }); %>
    </div>
<% } %>
