<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./layout.ejs'); %>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
  </head>

  <body>
    <div class="container">
      
      <div class="page-header">
        <h3>Login</h3>
        <hr />
      </div>
    </div>

    <div class="container">
      <% if (message && message.length > 0) { %>
        <div class="alert alert-danger" role="alert">
            <%= message %>
        </div>
    <% } %>

      <form
        id="login-form"
        class="form-horizontal"
        action="/login"
        method="post"
      >
     
        <div class="form-group row justify-content-md-center">
          <label
            for="username"
            class="col-sm-3 col-form-label text-right font-weight-bold"
            >userName</label
          >
          <div class="col-sm-7">
            <input
              type="text"
              class="form-control"
              id="username"
              name="username"
              placeholder="Username"
              autofocus
              required
            />
          </div>
        </div>
        <div class="form-group row justify-content-md-center">
          <label
            for="password"
            class="col-sm-3 col-form-label text-right font-weight-bold"
            >Password</label
          >
          <div class="col-sm-7">
            <input
              type="password"
              class="form-control"
              id="password"
              name="password"
              placeholder="Password"
              required
            />
          </div>
        </div>
        <div class="form-group row justify-content-md-center">
          <div class="offset-sm-3 col-sm-7">
            <button type="submit" class="btn btn-success">
              <i class="fa fa-sign-in"></i> Login
            </button>
          </div>
        </div>
      </form>
    </div>
  </body>
</html>
